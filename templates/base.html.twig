<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Symfony Site{% endblock %}</title>
    <link rel="icon" href="{{ asset('img/IMG_4451.JPG') }}">
    {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
    <header class="site-header main-header" style="background-image: url({{ asset('img/databas.jpg') }})">
        <span class="site-title">My Symfony Site</span>
    </header>

    <nav class="main-nav">
        <ul>
            <li class="{% if app.request.attributes.get('_route') == 'home' %}active{% endif %}">
                <a href="{{ path('home') }}">Home</a>
            </li>
            <li class="{% if app.request.attributes.get('_route') == 'about' %}active{% endif %}">
                <a href="{{ path('about') }}">About</a>
            </li>
            <li class="{% if app.request.attributes.get('_route') == 'report' %}active{% endif %}">
                <a href="{{ path('report') }}">Report</a>
            </li>
            <li class="{% if app.request.attributes.get('_route') == 'lucky' %}active{% endif %}">
                <a href="{{ path('lucky') }}">Lucky</a>
            </li>
            <li class="{% if app.request.attributes.get('_route') == 'card_index' %}active{% endif %}">
                <a href="{{ path('card_index') }}">Card</a>
            </li>
            <li class="{% if app.request.attributes.get('_route') == 'session_index' %}active{% endif %}">
                <a href="{{ path('session_index') }}">Session</a>
            </li>
            <li class="{% if app.request.attributes.get('_route') == 'api_index' %}active{% endif %}">
                <a href="{{ path('api_index') }}">API</a>
            </li>
        </ul>
    </nav>

    <main class="container">
        {% block body %}{% endblock %}
    </main>

    <footer class="site-footer">
        <p>&copy; 2025 Linn√©a Leewong</p>
    </footer>

    {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>
</html>