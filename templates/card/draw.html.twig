{% extends "base.html.twig" %}

{% block title %}Dra ett kort{% endblock %}

{% block body %}
<div class="card-container">
    <h1>Dra ett kort från kortleken</h1>


    {% if card %}
    <p class="card-message">Du drog: <span class="{{ card.cssClass|default('playing-card') }}">{{ card.label|default(card.value ~ card.suit) }}</span></p>
    {% else %}
        <p class="card-message">Det finns inga fler kort att dra!</p>
    {% endif %}

    <p class="card-message">Kvarvarande kort i leken: {{ remaining }}</p>

    <div class="card-actions">
        <a href="{{ path('card_draw') }}" class="btn">Dra ett till kort</a>
        <a href="{{ path('card_shuffle') }}" class="btn">Återställ kortleken</a>
        <a href="{{ path('card_index') }}" class="btn">Tillbaka till kortlekensidan</a>
    </div>
</div>
{% endblock %}