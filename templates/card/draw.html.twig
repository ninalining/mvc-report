{% extends "base.html.twig" %}

{% block title %}Dra ett kort{% endblock %}

{% block body %}
<div class="container">
    <h1>Dra ett kort från kortleken</h1>

    {% if card %}
        <p>Du drog: <span class="card">{{ card }}</span></p>
    {% else %}
        <p>Det finns inga fler kort att dra!</p>
    {% endif %}

    <p>Kvarvarande kort i leken: {{ remaining }}</p>

    <a href="{{ path('card_draw') }}" class="btn">Dra ett till kort</a>
    <a href="{{ path('card_shuffle') }}" class="btn">Återställ kortleken</a>
    <a href="{{ path('card_index') }}" class="btn">Tillbaka till landningssidan</a>
</div>
{% endblock %}